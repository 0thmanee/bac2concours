# IncubationOS - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================
# DATABASE
# ============================================================
DATABASE_URL="postgresql://user:password@localhost:5432/incubationos?schema=public"

# ============================================================
# AUTHENTICATION
# ============================================================
AUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:4000"
NEXT_PUBLIC_APP_URL="http://localhost:4000"

# ============================================================
# FILE STORAGE (S3-Compatible)
# ============================================================
S3_BUCKET_NAME="incubationos-receipts"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_ENDPOINT=""

# ============================================================
# EMAIL (Transactional)
# ============================================================
# For testing: Use "onboarding@resend.dev" (Resend's test address)
# For production: Verify your domain in Resend and use "noreply@yourdomain.com"
EMAIL_FROM="onboarding@resend.dev"
RESEND_API_KEY=""

# ============================================================
# ERROR TRACKING
# ============================================================
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ============================================================
# GOOGLE DRIVE (Books Folder Access)
# ============================================================
# Service Account credentials (from Google Cloud Console)
# 1. Create a Service Account in Google Cloud Console
# 2. Enable Google Drive API
# 3. Create a key (JSON) and extract email and private_key
# 4. Share your Google Drive folder with the service account email
GOOGLE_SERVICE_ACCOUNT_EMAIL=""
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=""
# The folder ID from the Google Drive URL: drive.google.com/drive/folders/{FOLDER_ID}
GOOGLE_DRIVE_BOOKS_FOLDER_ID=""

# ============================================================
# MISC
# ============================================================
NODE_ENV="development"
